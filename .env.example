# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Configuration (choose one)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
LLM_PROVIDER=openai  # or anthropic
LLM_MODEL=gpt-4  # or claude-3-opus-20240229

# Agent Configuration
LOG_LEVEL=INFO
AGENT_TIMEOUT=300
MAX_RETRIES=3

# Tool Paths (optional, will use system PATH if not specified)
NMAP_PATH=nmap
NIKTO_PATH=nikto
GOBUSTER_PATH=gobuster
SQLMAP_PATH=sqlmap
HYDRA_PATH=hydra
METASPLOIT_PATH=msfconsole

# Operational Parameters
SCAN_TIMEOUT=300
MAX_CONCURRENT_OPERATIONS=5
RATE_LIMIT_DELAY=1.0
STEALTH_MODE=false
